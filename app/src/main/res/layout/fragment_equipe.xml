<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.EquipeFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_emp2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="16dp"
            android:contentDescription="Add Employee"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/ic_refresh" />

        <Button
            android:id="@+id/delete_team_btn"
            android:layout_width="146dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:text="Delete team"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edite_name_team" />

        <EditText
            android:id="@+id/edite_name_team"
            android:layout_width="334dp"
            android:layout_height="56dp"
            android:ems="10"
            android:hint="Team Name "
            android:inputType="text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.493"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/add_team_btn"
            android:layout_width="149dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="Add team"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edite_name_team" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/equ_rv"
            android:layout_width="match_parent"
            android:layout_height="400sp"
            android:paddingTop="10sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/add_team_btn" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_emp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="@dimen/fab_margin"
        android:contentDescription="Add Employee"
        android:layout_marginBottom="16dp"
        app:srcCompat="@drawable/baseline_add_24" />

</FrameLayout>